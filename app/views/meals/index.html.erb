<p style="color: green"><%= notice %></p>

<div>
  <h1>Meals</h1>

  <%= form_tag import_meals_path, multipart: true do %>
    <%= file_field_tag :file, class: "block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-violet-50 file:text-violet-700 hover:file:bg-violet-100" %>
    開始日
    <%= date_field_tag :start_date, class: "rounded px-4 py-2" %>
    <%= submit_tag "CSVからスケジュールを登録" %>
  <% end %>

  <%= link_to "期間を指定して必要な食材を集計", action: "sum_foods" %>
</div>

<div id="meals">
  <% @meals.each do |meal| %>
    <%= render meal %>
    <p>
      <%= link_to "Show this meal", meal %>
    </p>
  <% end %>
</div>

<div>
  <button class="shadow-lg bg-sky-500 shadow-sky-500/50 hover:bg-sky-400 text-white rounded px-4 py-2">
    <%= link_to "New meal", new_meal_path %>
  </button>
</div>
