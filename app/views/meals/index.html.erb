<p style="color: green"><%= notice %></p>

<h1>Meals</h1>

<%= form_tag import_meals_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "CSVからスケジュールを登録" %>
<% end %>

<div id="meals">
  <% @meals.each do |meal| %>
    <%= render meal %>
    <p>
      <%= link_to "Show this meal", meal %>
    </p>
  <% end %>
</div>

<%= link_to "New meal", new_meal_path %>
